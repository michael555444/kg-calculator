{
  "compilerOptions": {
    "paths": {
      "app": [
        "app"
      ],
      "app/*": [
        "app/*"
      ],
      "features": [
        "features"
      ],
      "features/*": [
        "features/*"
      ],
      "pages": [
        "pages"
      ],
      "pages/*": [
        "pages/*"
      ],
      "widgets": [
        "widgets"
      ],
      "widgets/*": [
        "widgets/*"
      ],
      "entities": [
        "entities"
      ],
      "entities/*": [
        "entities/*"
      ],
      "shared": [
        "shared"
      ],
      "shared/*": [
        "shared/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es6",
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
